<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
	</style>

	<style name="ButtonSuperb" parent="Widget.AppCompat.Button.Borderless.Colored">
		<item name="android:textColor">@color/defaultButtonTextColor</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:textSize">24dp</item>
		<item name="android:layout_weight">1</item>

	</style>


	<style name="BigTextButton" parent="ButtonSuperb">
		<item name="android:textSize">36dp</item>
	</style>
	
	<style name="TableRow">
		<item name="android:layout_weight">1</item>
		<item name="android:showDividers">middle</item>
		<item name="android:divider">?android:dividerHorizontal</item>
	</style>
</resources>
