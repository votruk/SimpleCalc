<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:tools="http://schemas.android.com/tools"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 android:stretchColumns="*">
	<!--<ScrollView-->
	<!--android:layout_height="120dp"-->
	<!--android:layout_width="match_parent"-->
	<!--android:paddingRight="16dp"-->
	<!--android:paddingLeft="16dp"-->
	<!--android:fillViewport="true">-->
	<TextView android:id="@+id/historyTextView"
			  android:layout_width="fill_parent"
			  android:layout_gravity="right"
			  android:height="120dp"
			  android:gravity="right|bottom"
			  android:maxLines="10"
			  android:paddingLeft="16dp"
			  android:paddingRight="16dp"
			  android:paddingTop="16dp"
			  android:scrollbars="vertical"
			  tools:text="123 + 12"/>
	<!--</ScrollView>-->

	<TextView android:id="@+id/nowTypingTextView"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:gravity="right"
			  android:paddingLeft="16dp"
			  android:paddingRight="16dp"
			  android:paddingTop="8dp"
			  android:textSize="48dp"
			  android:textStyle="bold"
			  tools:text="125"/>
	<View
		android:layout_width="1dip"
		android:layout_height="1dip"
		android:layout_centerHorizontal="true"
		android:background="?android:attr/dividerHorizontal"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_marginBottom="8dp"
				  android:layout_marginLeft="16dp"
				  android:layout_marginTop="8dp"
				  android:text="MEMORY: "/>
		<TextView android:id="@+id/memoryTextView"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_marginBottom="8dp"
				  android:layout_marginTop="8dp"
				  tools:text="325"/>
	</LinearLayout>


	<View
		android:layout_width="1dip"
		android:layout_height="1dip"
		android:layout_centerHorizontal="true"
		android:background="?android:attr/dividerHorizontal"/>
	<TableRow
		style="@style/TableRow">
		<Button android:id="@+id/squareButton"
				style="@style/ButtonSuperb"
				android:text="SQR"/>
		<Button android:id="@+id/percentButton"
				style="@style/ButtonSuperb"
				android:text="%"/>
		<Button android:id="@+id/changeButton"
				style="@style/ButtonSuperb"
				android:text="+/-"/>
		<Button android:id="@+id/backspaceButton"
				style="@style/ButtonSuperb"
				android:text="DEL"/>
	</TableRow>
	<View
		android:layout_width="1dip"
		android:layout_height="1dip"
		android:layout_centerHorizontal="true"
		android:background="?android:attr/dividerHorizontal"/>
	<TableRow

		style="@style/TableRow">
		<Button android:id="@+id/memoryRecallClearButton"
				style="@style/ButtonSuperb"
				android:text="MR"/>
		<Button android:id="@+id/memoryAddButton"
				style="@style/ButtonSuperb"
				android:text="M+"/>
		<Button android:id="@+id/memorySubtractButton"
				style="@style/ButtonSuperb"
				android:text="M-"/>
		<Button android:id="@+id/clearButton"
				style="@style/ButtonSuperb"
				android:text="C"/>
	</TableRow>
	<View
		android:layout_width="1dip"
		android:layout_height="1dip"
		android:layout_centerHorizontal="true"
		android:background="?android:attr/dividerHorizontal"/>
	<TableRow
		style="@style/TableRow">
		<Button
			style="@style/ButtonSuperb"
			android:onClick="digitClick"
			android:text="7"/>
		<Button
			style="@style/ButtonSuperb"
			android:onClick="digitClick"
			android:text="8"/>
		<Button
			style="@style/ButtonSuperb"
			android:onClick="digitClick"
			android:text="9"/>
		<Button android:id="@+id/divideButton"
				style="@style/ButtonSuperb"
				android:text="/"/>
	</TableRow>
	<View
		android:layout_width="1dip"
		android:layout_height="1dip"
		android:layout_centerHorizontal="true"
		android:background="?android:attr/dividerHorizontal"/>
	<TableRow
		style="@style/TableRow">
		<Button
			style="@style/ButtonSuperb"
			android:onClick="digitClick"
			android:text="4"/>
		<Button
			style="@style/ButtonSuperb"
			android:onClick="digitClick"
			android:text="5"/>
		<Button
			style="@style/ButtonSuperb"
			android:onClick="digitClick"
			android:text="6"/>
		<Button android:id="@+id/multiplyButton"
				style="@style/ButtonSuperb"
				android:text="*"/>
	</TableRow>
	<View
		android:layout_width="1dip"
		android:layout_height="1dip"
		android:layout_centerHorizontal="true"
		android:background="?android:attr/dividerHorizontal"/>
	<TableRow
		style="@style/TableRow">
		<Button
			style="@style/ButtonSuperb"
			android:onClick="digitClick"
			android:text="1"/>
		<Button
			style="@style/ButtonSuperb"
			android:onClick="digitClick"
			android:text="2"/>
		<Button
			style="@style/ButtonSuperb"
			android:onClick="digitClick"
			android:text="3"/>
		<Button android:id="@+id/minusButton"
				style="@style/ButtonSuperb"
				android:text="-"/>
	</TableRow>
	<View
		android:layout_width="1dip"
		android:layout_height="1dip"
		android:layout_centerHorizontal="true"
		android:background="?android:attr/dividerHorizontal"/>
	<TableRow
		style="@style/TableRow">
		<Button
			style="@style/ButtonSuperb"
			android:onClick="digitClick"
			android:text="0"/>
		<Button android:id="@+id/dotButton"
				style="@style/ButtonSuperb"
				android:text="."/>
		<Button android:id="@+id/equalsButton"
				style="@style/ButtonSuperb"
				android:text="="/>
		<Button android:id="@+id/plusButton"
				style="@style/ButtonSuperb"
				android:text="+"/>
	</TableRow>

</TableLayout>